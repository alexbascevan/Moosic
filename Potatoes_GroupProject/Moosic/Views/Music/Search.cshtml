@{
    ViewData["Title"] = "Search for Music";
}

<h2>Search for Music</h2>

<form method="get" asp-action="SearchResults" asp-controller="Music">
    <input type="text" name="query" placeholder="Search for a song, album, or artist" class="form-control" />
    <button type="submit" class="btn btn-primary">Search</button>
</form>

<a href="@Url.Action("Dashboard", "Account")" class="btn btn-secondary">Return to Dashboard</a>
