@model List<Music>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to Moosic</h1>
</div>

<!-- Links to the SignUp and Login pages -->
<p>
    <a href="@Url.Action("SignUp", "Account")" class="btn btn-primary" style="margin-right: 10px;">Sign Up</a> 
    <a href="@Url.Action("Login", "Account")" class="btn btn-secondary">Login</a>
</p>


<h2>New Releases</h2>
<ul>
    @foreach (var item in Model)
    {
        <li>
            <strong>@item.Album</strong> by @item.Artist 
        </li>
    }
</ul>