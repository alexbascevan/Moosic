@{
    ViewData["Title"] = "Sign Up";
}

<div class="container text-light mt-5" style="max-width: 500px;">
    <h2 class="text-center mb-4" style="color: #c084fc;">Sign Up</h2>

    <form method="post" class="p-4 rounded bg-dark shadow-lg">
        <div class="form-group mb-3">
            <label for="UserName">Username</label>
            <input type="text" class="form-control" name="userName" required />
            <span class="text-danger small">@ViewData.ModelState["userName"]?.Errors.FirstOrDefault()?.ErrorMessage</span>
        </div>

        <div class="form-group mb-3">
            <label for="Email">Email</label>
            <input type="email" class="form-control" name="email" required />
            <span class="text-danger small">@ViewData.ModelState["email"]?.Errors.FirstOrDefault()?.ErrorMessage</span>
        </div>

        <div class="form-group mb-4">
            <label for="Password">Password</label>
            <input type="password" class="form-control" name="password" required />
            <span class="text-danger small">@ViewData.ModelState["password"]?.Errors.FirstOrDefault()?.ErrorMessage</span>
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-lg btn-primary px-5">Sign Up</button>
        </div>
    </form>
</div>
