@{
    ViewData["Title"] = "Dashboard";
    var userName = ViewBag.UserName ?? "User";
}

<div class="container text-light mt-5">
    <div class="text-center mb-4">
        <h1 class="text-purple">Welcome, @userName!</h1>
        <p>What would you like to do?</p>

        <div class="mt-4">
            <a href="@Url.Action("Search", "Music")" class="btn btn-primary btn-lg me-3">Search for Music</a>
            <a href="@Url.Action("Library", "Account")" class="btn btn-outline-light btn-lg">View Library</a>
        </div>
    </div>

    <div class="text-center mb-5">
        <a href="@Url.Action("Index", "Home")" class="btn btn-secondary mt-3">Logout</a>
    </div>

    <div class="bg-dark rounded p-4 shadow">
        <h2 class="text-purple">New Releases</h2>
        <ul class="list-unstyled">
            @foreach (var item in Model)
            {
                <li class="d-flex align-items-center mb-3">
                    <img src="@item.ImageUrl" alt="Cover" class="rounded me-3" style="width: 60px; height: 60px;" />
                    <div>
                        <strong>@item.Album</strong> by @item.Artist
                        <small class="text-muted">Released: @item.releaseDate</small>
                    </div>
                </li>
            }
        </ul>
    </div>
</div>
